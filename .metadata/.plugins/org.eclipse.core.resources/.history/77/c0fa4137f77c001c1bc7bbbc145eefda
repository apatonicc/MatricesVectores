/**
 * Escribe un fragmento de código que encuentre el valor mayor en una matriz de números en
doble precisión de 50 filas por 50 columnas.
 * @author alu
 *
 */
public class Ejercicio_5 {

	public static void main(String[] args) {
		double [][] numeros = new double [50][50];
		numeros[10][10] = 15.5;
		numeros[20][30] = 20.89;
		double valorMaximo = numeros[0][0];
		for(int i = 0; i < numeros.length; ++i) {
			for(int j = 0; j < numeros[i].length; ++j) {
					valorMaximo = numeros[i][j];
			}
		}
		System.out.println(valorMaximo);
		

	}

}
