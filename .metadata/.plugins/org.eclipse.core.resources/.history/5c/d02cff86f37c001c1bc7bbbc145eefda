public class Ejercicio_2 {

	public static void main(String[] args) {
		float [][] plan = new float [30][10];
		
		//plan[13][7]= (float) 27.3;
		for (int i = 0; i < plan.length; ++i) {
			System.out.println(plan[i][0]);
		      for(int j = 0; j < plan[i].length; ++j) {
		    	  plan[i][j]=1;
		    	  
		      }
		    }
		}

	}

